{
  "name": "Corsarial",
  "version": "1.1.0",
  "description": "Cordova app boilerplate for angular material",
  "keywords": [
    "cordova",
    "angular",
    "material",
    "hotpot",
    "mocha",
    "jsdom",
    "protractor",
    "boilerplate"
  ],
  "license": "MIT",
  "author": "Benito Gomez <benitogf@outlook.com>",
  "repository": "benitogf/corsarial",
  "main": "index.html",
  "window": {
    "title": "Corsarial",
    "icon": "img/logo.png",
    "min_width": 960,
    "min_height": 700
  },
  "standard": {
    "globals": [
      "angular",
      "$",
      "_",
      "d3",
      "utils",
      "mockUtils",
      "chai",
      "expect"
    ],
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "protractor": true
    }
  },
  "scripts": {
    "hint": "standard --verbose | snazzy",
    "specs-build": "hotpot specs",
    "specs-coverage": "remap-istanbul -i coverage/coverage.json --exclude node_modules,^.spec.js,^.json,^.html,^.module.js -o coverage/lcov-report -t html",
    "specs": "istanbul cover --print none node_modules/mocha/bin/_mocha -- -R spec",
    "pretest": "webdriver-manager update",
    "test": "protractor protractor.conf.js",
    "coverage": "remap-istanbul -i coverage/coverage.json --exclude node_modules,^.spec.js,^.json,^.html,^.module.js --type text-lcov | coveralls",
    "build-nw": "cordova build browser --config=nw",
    "build": "cordova build",
    "platform": "cordova platform add",
    "start": "hotpot",
    "server": "node index.js"
  },
  "devDependencies": {
    "angular": "^1.5.5",
    "angular-animate": "^1.5.5",
    "angular-aria": "^1.5.5",
    "angular-cookies": "^1.5.8",
    "angular-material": "^1.1.0",
    "angular-messages": "^1.5.5",
    "angular-mocks": "^1.5.8",
    "angular-route": "^1.5.5",
    "angular-translate": "^2.11.1",
    "angular-translate-storage-cookie": "^2.11.1",
    "angular-translate-storage-local": "^2.11.1",
    "browserify-aes": "^1.0.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "clipboard": "^1.5.12",
    "coveralls": "^2.11.12",
    "d3": "^4.2.2",
    "istanbul": "^0.4.5",
    "jquery": "^3.1.0",
    "jsdom": "^9.4.2",
    "jsonpack": "^1.1.5",
    "lodash": "^4.15.0",
    "lz-string": "^1.4.4",
    "mocha": "^3.0.1",
    "moment": "^2.14.1",
    "node-localstorage": "^1.3.0",
    "opn": "^4.0.2",
    "protractor": "^4.0.2",
    "remap-istanbul": "^0.6.4",
    "sha.js": "^2.4.5",
    "snazzy": "^4.0.1",
    "standard": "^8.0.0"
  }
}
