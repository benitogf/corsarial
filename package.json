{
  "name": "Corsarial",
  "version": "1.1.3",
  "description": "Cordova app boilerplate for angular material",
  "keywords": [
    "cordova",
    "angular",
    "material",
    "hotpot",
    "mocha",
    "jsdom",
    "boilerplate"
  ],
  "license": "MIT",
  "author": "Benito Gomez <benitogf@outlook.com>",
  "repository": "benitogf/corsarial",
  "main": "index.html#!/",
  "window": {
    "title": "Corsarial",
    "icon": "img/logo.png",
    "min_width": 960,
    "min_height": 700
  },
  "standard": {
    "globals": [
      "angular",
      "$",
      "_",
      "d3",
      "utils",
      "mockUtils",
      "chai",
      "expect"
    ],
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "ignore": [
        "test/e2e/*"
    ]
  },
  "scripts": {
    "install": "./node_modules/.bin/selenium-standalone install",
    "hint": "standard --verbose | snazzy",
    "specs-build": "hotpot specs",
    "specs-coverage": "remap-istanbul -i coverage/coverage.json --exclude node_modules,spec.js,json,html,module.js -o coverage/lcov-report -t html",
    "specs-remap": "istanbul cover --print none node_modules/mocha/bin/_mocha -- -R spec",
    "specs": "npm run specs-build && npm run specs-remap && npm run specs-coverage",
    "coverage": "remap-istanbul -i coverage/coverage.json --exclude node_modules,spec.js,json,html,module.js -t text-lcov | coveralls",
    "drive": "./node_modules/.bin/selenium-standalone start",
    "build-nw": "cordova build browser --config=nw",
    "build": "cordova build",
    "platform": "cordova platform add",
    "start": "hotpot",
    "server": "node index.js",
    "test": "./node_modules/.bin/_mocha ./test/e2e/*.test.js",
    "lint": "./node_modules/.bin/eslint ./test/e2e"
  },
  "devDependencies": {
    "@uirouter/angularjs": "^1.0.3",
    "angular": "^1.6.4",
    "angular-animate": "^1.6.4",
    "angular-aria": "^1.6.4",
    "angular-cookies": "^1.6.4",
    "angular-material": "^1.1.4",
    "angular-messages": "^1.6.4",
    "angular-mocks": "^1.6.4",
    "angular-moment": "^1.0.0-beta.6",
    "angular-translate": "^2.15.1",
    "angular-translate-storage-cookie": "^2.15.1",
    "angular-translate-storage-local": "^2.15.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-register": "^6.16.3",
    "browserify-aes": "^1.0.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "clipboard": "^1.6.1",
    "coveralls": "^2.13.1",
    "d3": "^4.8.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "istanbul": "^0.4.5",
    "jquery": "^3.2.1",
    "jsdom": "^11.0.0",
    "jsonpack": "^1.1.5",
    "lodash": "^4.17.4",
    "lz-string": "^1.4.4",
    "mocha": "^3.4.0",
    "moment": "^2.18.1",
    "moment-timezone": "^0.5.13",
    "node-localstorage": "^1.3.0",
    "quill": "^1.2.4",
    "remap-istanbul": "^0.9.5",
    "selenium-standalone": "^6.4.1",
    "selenium-webdriver": "^3.4.0",
    "sha.js": "^2.4.5",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  }
}
